{
  "name": "@gapit/ga-component",
  "description": "A component for controlling a ga component.",
  "version": "0.0.0",
  "license": "MIT",
  "main": "dist/index.js",
  "module": "dist/index.es.js",
  "types": "dist/index.d.ts",
  "files": [
    "/dist"
  ],
  "scripts": {
    "build": "rollup -c",
    "clean": "rimraf coverage dist",
    "fix": "npm run fix:eslint && npm run fix:prettier",
    "fix:eslint": "eslint . --ext .ts,.js --fix",
    "fix:prettier": "prettier --write .",
    "lint": "npm run lint:eslint && npm run lint:prettier",
    "lint:eslint": "eslint . --ext .ts,.js",
    "lint:prettier": "prettier --check .",
    "prepublishOnly": "npm run lint && npm run test && npm run build",
    "test": "cypress run",
    "watch": "rollup -cw"
  },
  "devDependencies": {
    "@babel/core": "^7.14.5",
    "@babel/plugin-proposal-nullish-coalescing-operator": "^7.14.5",
    "@babel/plugin-proposal-optional-chaining": "^7.14.5",
    "@babel/preset-env": "^7.14.5",
    "@bahmutov/add-typescript-to-cypress": "^2.1.2",
    "@cypress/webpack-preprocessor": "^5.9.0",
    "@gapit/grafana-metric": "^1.0.0",
    "@grafana/data": "^8.0.1",
    "@rollup/plugin-commonjs": "^15.1.0",
    "@rollup/plugin-node-resolve": "^9.0.0",
    "@types/jest": "^26.0.14",
    "@typescript-eslint/eslint-plugin": "^4.3.0",
    "@typescript-eslint/parser": "^4.3.0",
    "babel-loader": "^8.2.2",
    "cypress": "^7.7.0",
    "eslint": "^7.11.0",
    "eslint-plugin-cypress": "^2.11.3",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-sort-exports": "^0.3.2",
    "jest": "^26.5.3",
    "prettier": "^2.1.2",
    "rimraf": "^3.0.2",
    "rollup": "^2.29.0",
    "rollup-plugin-typescript2": "^0.27.2",
    "ts-jest": "^26.4.1",
    "typescript": "^4.0.3",
    "webpack": "^5.38.1"
  },
  "pre-commit": [
    "prepublishOnly"
  ],
  "directories": {
    "test": "test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gapitio/ga-component.git"
  },
  "author": "Gapit",
  "bugs": {
    "url": "https://github.com/gapitio/ga-component/issues"
  },
  "homepage": "https://github.com/gapitio/component-template#readme",
  "publishConfig": {
    "access": "public"
  }
}
